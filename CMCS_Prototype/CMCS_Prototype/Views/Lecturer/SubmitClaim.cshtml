@{
    ViewData["Title"] = "New Claim Submission";
}

<h2 class="mb-4">Submit New Monthly Claim</h2>

<div class="card p-4 shadow-sm">
    <form>
        <div class="row mb-4">
            <div class="col-md-6">
                <label for="claimMonth" class="form-label">Claim Month/Period</label>
                <input type="month" class="form-control" id="claimMonth" value="2025-10">
            </div>

            <div class="col-md-6">
                <label for="lecturerName" class="form-label">Lecturer Name</label>
                <input type="text" class="form-control" id="lecturerName" value="[Your Name]" disabled>
            </div>
        </div>

        <h4 class="mt-4 mb-3">Claim Line Items (Hours Worked)</h4>
        <div class="table-responsive mb-4">
            <table class="table table-bordered" id="lineItemsTable">
                <thead>
                    <tr class="table-info">
                        <th>Date Worked</th>
                        <th>Activity Description</th>
                        <th>Hours</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="date" class="form-control" value="2025-10-05"></td>
                        <td><input type="text" class="form-control" placeholder="e.g., Lecture delivery, Marking, etc."></td>
                        <td><input type="number" class="form-control" value="4.0" step="0.5"></td>
                    </tr>
                    <tr>
                        <td><input type="date" class="form-control" value="2025-10-06"></td>
                        <td><input type="text" class="form-control" placeholder="e.g., Tutorial preparation"></td>
                        <td><input type="number" class="form-control" value="2.5" step="0.5"></td>
                    </tr>
                </tbody>
            </table>
            <button type="button" class="btn btn-sm btn-outline-secondary"><i class="bi bi-plus"></i> Add Row</button>
        </div>

        <h4 class="mt-4 mb-3">Supporting Documents</h4>
        <div class="mb-4 border p-3 rounded">
            <p>Upload files (e.g., timesheets, attendance registers)</p>
            <input type="file" multiple class="form-control">
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary btn-lg">Save Draft</button>
            <button type="button" class="btn btn-success btn-lg">Submit Claim</button>
        </div>
    </form>
</div>